extends layout

block content
  div.container
    header
      div.header-container
        h1.directory-title Create a Brand

        //- button.header-back-button(onclick='window.history.back()') Back
    
    div.form-container
      form(method='POST' enctype="multipart/form-data" action='')
        div.form-group
          label.form-label(for='name') Name:
          input#name.form-control(type='text', placeholder='Name' name='name' required='true' value=(undefined===brand ? '' : brand.name) )
        div.form-group
          label.form-label(for='imageURL') Image:
          input#imageURL.form-control(type='file', placeholder='image' name='imageURL' required='true' value=(undefined===brand ? '' : brand.imageURL) )
        div.center-container
          button.submit-button(type='submit') Submit

      if errors
        ul
          for error in errors
            li!= error.msg
    br
    h2 Brands can only be deleted by admin