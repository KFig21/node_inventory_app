extends layout

block content
  div.container
    header
      div.header-container
        h1.directory-title DELETE - #{item.brand[0].name} #{item.name}

    div.form-container

      div.center-container
        h3 Do you really want to delete this Item?
      
      form(method='POST' action='')
        div.form-group
          input#id.form-control(type='hidden',name='id', required='true', value=item._id )
        div.center-container
          div.item-detail-img-container-no-padding
            img(src='https://party-planner-images.s3.amazonaws.com/' + item.imageURL)
        div.center-container
          button.button-delete-button(type='submit') Delete
    