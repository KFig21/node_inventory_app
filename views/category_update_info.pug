extends layout

block content
  div.container
    header
      div.header-container
        h1.directory-title Update Category - #{category.name}

        //- button.header-back-button(onclick='window.history.back()') Back
    
    div.form-container
      form(method='POST' action='')
        div.form-group
          label(for='name') Name:
          input.form-label#name.form-control(type='text', placeholder='Name' name='name' required='true' value=(undefined===category ? '' : category.name) )
        div.center-container
          button.submit-button(type='submit') Submit

      if errors
        ul
          for error in errors
            li!= error.msg