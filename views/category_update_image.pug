extends layout

block content
  div.container
    header
      div.header-container
        h1.directory-title Update Category Image - #{category.name}

        button.header-back-button(onclick='window.history.back()') Back
    
    div.form-container
      form(method='POST' enctype="multipart/form-data" action='')
        div.form-group
          label.form-labe(for='imageURL') Image:
          input#imageURL.form-control(type='file', placeholder='image' name='imageURL' required='true' value=(undefined===category ? '' : category.imageURL) )
        div.hidden
          label(for='name') Name:
          input#name.form-control(type='text', placeholder='Name' name='name' required='true' value=(undefined===category ? '' : category.name) )
        div.hidden
          label(for='oldImageURL') oldImageURL:
          input#oldImageURL.form-control(type='text', placeholder='oldImageURL' name='oldImageURL' required='true' value=(undefined===category ? '' : category.imageURL) )
        div.center-container
          button.submit-button(type='submit') Submit

      if errors
        ul
          for error in errors
            li!= error.msg